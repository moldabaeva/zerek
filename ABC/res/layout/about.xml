<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/aboutRoot" android:layout_width="fill_parent" android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:padding="15.0dip" android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:paddingBottom="20.0dip"
                      android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:paddingRight="2.0dip" android:layout_width="wrap_content"
                       android:layout_height="fill_parent" android:src="@drawable/ic_logo"
                       android:adjustViewBounds="true"/>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:text="@string/app_name"
                          style="@style/DialogText"/>
                <TextView android:id="@+id/aboutVersion" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" style="@style/DialogText"/>
                <TextView android:id="@+id/about_copyrights" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" style="@style/DialogText"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:autoLink="all" android:paddingBottom="10.0dip" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:id="@+id/thanks_contact_body"
                  style="@style/DialogText"/>
        <!--<TextView android:autoLink="all" android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent" android:id="@+id/thanks_body"-->
        <!--style="@style/DialogText"/>-->
    </LinearLayout>
</ScrollView>